{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/menu/*.cpp",
                "${workspaceFolder}/src/ThuVien/*.cpp",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/Quan_li_thu_vien.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}
